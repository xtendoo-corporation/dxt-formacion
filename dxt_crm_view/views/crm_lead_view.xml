<odoo>
    <record id="crm_case_kanban_view_leads_inherit" model="ir.ui.view">
        <field name="name">crm.lead.kanban.lead</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <div>
                    <field name="contact_name"/>
                </div>
                <div>
                    <field name="create_date"/>
                </div>
            </field>
        </field>
    </record>

    <record id="crm_lead_view_form" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//sheet//group//group//field[@name='tag_ids']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//form//sheet//group//group//field[@name='date_deadline']" position="before">
                <field name="tag_ids" widget="many2many_tags"
                       options="{'color_field': 'color', 'no_create_edit': True}"/>
            </xpath>
            <xpath expr="//form//sheet//group//group[@name='opportunity_partner']//field[@name='partner_id']"
                   position="before">
                <field name="contact_name"/>
            </xpath>
            <xpath expr="//form//sheet//group//group[@name='opportunity_partner']//field[@name='contact_name']"
                   position="attributes">
                <attribute name="string">Nombre del alumno</attribute>
            </xpath>
            <!--            <xpath expr="//form//sheet//notebook//page[@name='lead']//group//group//field[@name='tag_ids']" position="attributes">-->
            <!--                <attribute name="invisible">1</attribute>-->
            <!--            </xpath>-->
            <xpath expr="//form//sheet//notebook//page[@name='lead']//group//group//field[@name='contact_name']"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//form//sheet//notebook//page[@name='lead']//group//group//field[@name='medium_id']"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//form//sheet//notebook//page[@name='lead']//group//group//field[@name='website']"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//form//sheet//notebook//page[@name='lead']//group//group//field[@name='lang_id']"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//form//sheet//notebook//page[@name='lead']//group//group//field[@name='function']"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
