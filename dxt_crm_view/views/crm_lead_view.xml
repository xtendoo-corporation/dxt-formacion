<odoo>
    <record id="crm_case_kanban_view_leads_inherit" model="ir.ui.view">
        <field name="name">crm.lead.kanban.lead</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <div>
                <field name="create_date" />
                </div>
            </field>
        </field>
    </record>

    <record id="crm_lead_view_form" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form//sheet//notebook//page[@name='lead']//group//group//label[@for='contact_name_page_lead']" position="attributes">
                <attribute name="string">Nombre del alumno</attribute>
            </xpath>
            <xpath expr="//form//sheet//notebook//page[@name='lead']//group//group//field[@name='medium_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
