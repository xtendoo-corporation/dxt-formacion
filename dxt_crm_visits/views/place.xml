<odoo>
    <record id="place_visit_form" model="ir.ui.view">
        <field name="name">place.visit.form</field>
        <field name="model">place.visit</field>
        <field name="arch" type="xml">
            <form>
                <label for="name"/>
                <field name="name"/>
            </form>
        </field>
    </record>

    <record id="place_visit_tree" model="ir.ui.view">
        <field name="name">place.visit.tree</field>
        <field name="model">place.visit</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="place_lead_visit_action" model="ir.actions.act_window">
        <field name="name">Lugares de visita</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">place.visit</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
        <field name="context">{'module' : 'place_visit'}</field>
    </record>

    <menuitem
        id="place_lead_visit"
        name="Lugares de visita"
        parent="crm.crm_menu_config"
        action="place_lead_visit_action"
    />
</odoo>
